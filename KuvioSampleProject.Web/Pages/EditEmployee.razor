@page "/editemployee"

@inherits EditEmployeeBase

<EditForm Model="@Employee" OnSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <h3>@PageHeaderText</h3>
    <hr />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name" @bind-Value="Employee.FirstName" />
            <ValidationMessage For="@(()=> Employee.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Last Name" @bind-Value="Employee.LastName" />
            <ValidationMessage For="@(()=> Employee.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email" @bind-Value="Employee.Email" />
            <ValidationMessage For="@(()=> Employee.Email)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="country" class="col-sm-2 col-form-label">
            Country
        </label>
        <div class="col-sm-10">
            <InputText id="country" class="form-control" placeholder="Country" @bind-Value="Employee.Country" />
            <ValidationMessage For="@(()=> Employee.Country)" />
        </div>
    </div>
    <div class="form-group row calendar">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">
            Date Of Birth
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="Employee.DateOfBirth" class="form-control" />
            <p class="obs">*Date format: DD/MM/YYYY</p>
        </div>
    </div>
    <div class="form-group row age">
        <label for="age" class="col-sm-2 col-form-label">
            Age
        </label>
        <div class="col-sm-10">
            <input id="age" class="form-control" placeholder="Country" value="@CalculateAge(Employee.DateOfBirth)" readonly />
        </div>
    </div>
    <div class="btnPos">
        <div class="posBtn">
            <a href="/" class="btn btn-secondary">Back</a>
        </div>
        <div class="posBtn">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>

</EditForm>

